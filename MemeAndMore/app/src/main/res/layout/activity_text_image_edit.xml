<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clickable="false">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_content"
        android:layout_weight="3.88"
        android:maxLines="20"
        android:lines="4"
        android:hint="Enter your caption here.."
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:height="90dp"
        android:minHeight="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_font_type"
        android:id="@+id/lbl_font_type"
        android:layout_below="@+id/txt_content"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_font_type"
        android:layout_below="@+id/lbl_font_type"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="fill_horizontal|center_horizontal|left|right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_font_face"
        android:id="@+id/lbl_font_face"
        android:layout_below="@+id/spinner_font_type"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_font_face"
        android:layout_below="@+id/lbl_font_face"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="fill_horizontal|center_horizontal|left|right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_font_color"
        android:id="@+id/lbl_font_color"
        android:layout_below="@+id/spinner_font_face"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/btn_color_picker"
        android:background="#ff171717"
        android:paddingLeft="10dp"
        android:layout_below="@+id/lbl_font_color"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_font_size"
        android:id="@+id/lbl_font_size"
        android:layout_below="@+id/btn_color_picker"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />


    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_below="@+id/lbl_font_size"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:measureWithLargestChild="false"
        android:paddingTop="10dp" />


</RelativeLayout>
